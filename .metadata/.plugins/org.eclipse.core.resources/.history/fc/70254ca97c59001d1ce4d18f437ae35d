package excercicio2;

import java.util.Scanner;



public class Exercicio3 {
	
	
	public static void main(String[] args) {
	 Scanner leia = new Scanner(System.in)	;
		
		 int x =0,soma=0;
		 
		 while(x >0) {
			 
		    System.out.println(" Digite sua idade: ");
		    x = leia.nextInt();
		    soma = soma + x;
			  System.out.println(soma);
			    
		 
	
	}
		    
	}	 
	
}